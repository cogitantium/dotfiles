                focused_workspace    #5294e2  #5294e2     #1F2D3A
                active_workspace     #5294e2  #5294e2     #1F2D3A
                #inactive_workspace   #1F2D3A  #1F2D3A     #5294e2
                inactive_workspace   #1F2D3A  #2F343F     #5294e2

        } 
